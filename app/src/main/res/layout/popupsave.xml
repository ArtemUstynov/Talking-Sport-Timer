<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                android:layout_height="wrap_content" android:background="#c5cae9">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_below="@+id/tvInfo" android:layout_centerHorizontal="true" android:layout_marginTop="40dp"
            android:id="@+id/etSave" android:hint="@string/WorkoutName"/>
    <Button
            android:text="@string/Save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp" android:id="@+id/btnPopUpSave"
            android:layout_below="@+id/etSave"
            android:background="@drawable/btnsave_shadow" android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
    <TextView
            android:text="@string/WorkoutName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp" android:id="@+id/tvInfo"
            android:textSize="28sp" android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
            android:textColor="?android:attr/colorFocusedHighlight"/>
</RelativeLayout>
